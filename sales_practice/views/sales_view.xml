<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record model="ir.actions.act_window" id="open_sales_salesperson">
       <field name="name">Sales.Person</field>
       <field name="res_model">sales.salesmen</field>
       <field name="view_mode">tree,form</field>
       <field name="domain">[('salesman_id','=',active_id)]</field>
       <field name="context">{}</field>
   </record>


    <record model="ir.ui.view" id="sales_id">
        <field name="name">sales</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number_seq" readonly="1"/>
                <field name="customer"  widget="many2one" optional="show"/>
                <field name="invoice_date" options='{"countdown": "timer"}'/>
                <field name="due_date"/>
                <field name="sales_person" widget="many2one" optional="show"/>
                <field name="next_activity" widget="list_activity" optional="show"/>
                <field name="taxt_included" sum="Tax Count"/>
                <field name="total" sum="sum of total" widget="monetary"/>
                <field name="state" decoration-success="state == 'done'"  decoration-info="state == 'confirm'" decoration-warning="state == 'draft'" widget="badge"/>
                <field name="payment" decoration-success="payment == 'paid'"  decoration-warning="payment == 'not_paid'" widget="badge"/>
                <!-- <field name="review" widget="char_emojis"/> -->
            </tree>
        </field>
    </record>


    <record id="sales_view_form" model="ir.ui.view" >
        <field name="name">Sales.form</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
                    <button name="action_done" type="object" states="confirm" string="Done" class="oe_highlight"/>
                    <button name="test_recordset" type="object" string="Record Set Opertaions" class="oe_highlight" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
                </header>
                 <br/>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_sales_salesperson" type="object"
                                class="oe_stat_button" string="Sales Person" icon="fa-calendar">
                        </button>

                         <button name="%(open_sales_salesperson)d" type="action"
                                class="oe_stat_button" string="Sales Person" icon="fa-usd">
                                <!-- <field name="sales_count" string="Sales Person" widget="statinfo" /> -->
                        </button>
                    </div>
                <br/>
                <sheet string="Customer Invoice">
                <widget name="web_ribbon" text="Not Paid" bg_color="bg-danger" attrs="{'invisible': [('payment','=','paid')]}" />
                <widget name="web_ribbon" text="Paid" bg_color="bg-success" attrs="{'invisible': [('payment','=','not_paid')]}" />
                     <div class="oe_title">
                           <h1>
                               <strong><h1><field name="number_seq" readonly="1"/></h1></strong>
                           </h1>
                        </div>
                        <br/>
                        <group>
                            <field name="customer" style="width:50%"/>
                            <field name="invoice_date" style="width:50%"/>
                            <field name="due_date" style="width:50%"/>
                        </group>
                        <br/><br/>

                <notebook>
                    
                    <page string="Personal Details">
                        <group>
                            <field name="next_activity"/>
                            <field name="sales_person" widget="mail_activity" />
                            <field name="taxt_included"/>
                            <field name="total" widget="monetary"/>
                            <field name="address"/>
                            <field name="payment" widget="radio" options="{'vertical':true}"/>
                            <field name="review" widget="char_emojis"/>
                        </group>
                    </page>
                </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                       <field name="activity_ids" widget="mail_activity"/>
                       <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}" />
                </div>
            </form>
        </field>
    </record>

    
     <record id="sales_kanban" model="ir.ui.view">
            <field name="name">sales.kanban.view</field>
            <field name="model">sales</field> 
            <field name="arch" type="xml">
                <kanban>
                       <templates>  
                           <t t-name="kanban-box">
                                <div class="container">
                                 <!-- <div class="row"> -->
                                   <div class="o_kanban_record_top">
                                        <div class="o_kanban_top_left">
                                           <strong class="o_kanban_record_title"> 
                                           <field name="customer"/>
                                           </strong>
                                       </div>
                                       
                                   </div>

                                   <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                           <strong   class="o_kanban_record_title"></strong>
                                           <field name="total"/>
                                       </div>
                                    
                                       <div class="oe_kanban_bottom_right">
                                        <a type="button" class="col-sm-12 bg-light">
                                             
                                             <h3>
                                                 <field name="state" decoration-success="state == 'done'"  decoration-info="state == 'confirm'" decoration-warning="state == 'draft'" widget="badge"/>
                                            </h3>
                                         </a>
                                   </div>
                               </div>
                               </div>
                               <!-- </div> -->
                           </t>          
                       </templates>       
                </kanban>   
            </field>
        </record>	

        <record model="ir.ui.view" id="sales_calendar_view">
            <field name="name">Sales</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <calendar color="customer" date_start="invoice_date" string="Sales Calendar" mode="month">
                    <field name="customer"/>
                    <!-- <field name="contactNo"/> -->
                </calendar>
            </field>
        </record>


        <record model="ir.ui.view" id="ssales_session_graph_view">
            <field name="name">sales.graph</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <graph string="sales by percentage">
                    <field name="customer"/>
                    <field name="taxt_included" type="measure"/>
                    <field name="total" type="measure"/>
                </graph>
            </field>
        </record>


         <record model="ir.ui.view" id="sales_search_view">
            <field name="name">Sales.search</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <search>
                    <field name="customer"/>
                    <field name="number_seq"/>
                    <field name="next_activity"/>
                    <field name="state"/>
                    <field name="payment"/>
                    <separator/>
                    <filter string="Done" name="state" domain="[('state','=','done')]" />
                    <filter string="Confirm" name="state" domain="[('state','=','confirm')]" />
                     <filter string="Draft" name="state" domain="[('state','=','draft')]" />
                     <separator/>
                     <filter string="Paid" name="payment" domain="[('payment','=','paid')]" />
                     <filter string="Not Paid" name="payment" domain="[('payment','=','not_paid')]" />
                     <separator/>
                    <group string="Group By">
                         <filter string="State" name="state" context="{'group_by':'state'}" />
                         <filter string="Payment" name="payment" context="{'group_by':'payment'}" />
                         <separator/>
                         <filter string="Invoice Date" name="invoice_date" context="{'group_by':'invoice_date:year'}" />
                         <filter string="Due Date" name="due_date" context="{'group_by':'due_date:year'}" />
                    </group>
                </search>
            </field>
        </record> 


    <record model="ir.ui.view" id="activities_tree_view">
            <field name="name">Sales.activity.tree</field>
            <field name="model">sales.activity</field>
            <field name="arch" type="xml">
                <tree string="Activities">
                    <field name="activity"/>
                </tree>
            </field>
        </record>
    
    <record model="ir.ui.view" id="course_form_view">
            <field name="name">Sales.activity.form</field>
            <field name="model">sales.activity</field>
            <field name="arch" type="xml">
                <form string="Activities Form">
                    <sheet>
                        <group>
                            <field name="activity"/>
                            <field name="activity_ids" widget="mail_activity"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="salesperson_tree_view">
            <field name="name">Sales.salesmen.tree</field>
            <field name="model">sales.salesmen</field>
            <field name="arch" type="xml">
                <tree string="Sales Person">
                    <field name="sales_person"/>
                    <field name="salesman_id"/>
                    <field name="contactNo"/>
                    <field name="email"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                </tree>
            </field>
        </record>
    
    <record model="ir.ui.view" id="salesperson_form_view">
            <field name="name">Sales.salesperson.form</field>
            <field name="model">sales.salesmen</field>
            <field name="arch" type="xml">
                <form string="Sales Person Form">
                    <sheet>
                        <group>
                            <field name="sales_person"/>
                            <field name="contactNo"/>
                            <field name="email"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sales_session_graph_view">
            <field name="name">sales.graph</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <graph string="Sales">
                    <field name="customer"/>
                    <field name="taxt_included" type="measure"/>
                    <field name="total" type="measure"/>
                </graph>
            </field>
        </record>


        <record model="ir.ui.view" id="sales_session_pivot_view">
            <field name="name">sales.pivot</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <pivot string="Sales by Due Date">
                    <field name="customer" type="row"/>
                    <field name="due_date" type="col" interval="days"/>
                </pivot>
            </field>
        </record>

        <record id="sales_order_view_activity" model="ir.ui.view">
            <field name="name">sales.activity</field>
            <field name="model">sales</field>
            <field name="arch" type="xml">
                <activity string="Sales Order">
                    <templates>
                        <div t-name="activity-box">
                            <div>
                                <field name="customer" display="full"/>
                                <field name="next_activity" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>


        <record model="ir.ui.view" id="products_tree_view">
            <field name="name">Sales.products.tree</field>
            <field name="model">sales.products</field>
            <field name="arch" type="xml">
                <tree string="Sales Products">
                    <field name="product_seq"/>
                    <field name="product_name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="price"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                </tree>
            </field>
        </record>
    
    <record model="ir.ui.view" id="products_form_view">
            <field name="name">Sales.salesperson.form</field>
            <field name="model">sales.products</field>
            <field name="arch" type="xml">
                <form string="Sales Person Form">
                    <sheet>
                        <group>
                            <field name="product_seq"/>
                            <field name="product_name"/>
                            <field name="color" widget="color_picker"/>
                            <field name="price" widget="mail_activity"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="sales_products_kanban" model="ir.ui.view">
            <field name="name">sales.kanban.view</field>
            <field name="model">sales.products</field> 
            <field name="arch" type="xml">
                <kanban>
                    <field name="product_name"/>
                    <field name="image" widget="image"/>
                    <field name="id"/>
                       <templates>  
                           <t t-name="kanban-box">
                                <div class="container">
                                 <div class="o_kanban_image"> 
                                       <img t-att-src="kanban_image('sales.products', 'image', record.id.raw_value)"  alt="Avatar"/>
                                    </div>
                                 <div class="row">
                                   <div class="col-8">
                                        <div class="oe_kanban_details">
                                           <strong class="o_kanban_record_title"> 
                                           <field name="product_name"/></strong>
                                       </div>
                                       <div class="oe_kanban_details">
                                           <strong   class="o_kanban_record_title"></strong>
                                           <field name="product_seq"/>
                                       </div>
                                       <div class="oe_kanban_details">
                                           <strong   class="o_kanban_record_title">Price: </strong>
                                           <field name="price"/>
                                       </div>
                                   </div>

                               </div>
                               </div>
                           </t>          
                       </templates>       
                </kanban>   
            </field>
        </record>	


        <record id="sales_products_activity" model="ir.ui.view">
            <field name="name">sales.activity</field>
            <field name="model">sales.products</field>
            <field name="arch" type="xml">
                <activity string="Sales Products">
                    <templates>
                        <div t-name="activity-box">
                            <div>
                                <field name="product_name" display="full"/>
                                <field name="price" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>



     <record id="sales_action" model="ir.actions.act_window" >
        <field name="name">Sales Invoices</field>
        <field name="res_model">sales</field>
        <field name="view_mode">tree,form,kanban,search,calendar,pivot,graph,activity</field>
    </record>

    <record id="sales_activity_action" model="ir.actions.act_window" >
        <field name="name">Activities</field>
        <field name="res_model">sales.activity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="sales_salesperson_action" model="ir.actions.act_window" >
        <field name="name">Sales Person</field>
        <field name="res_model">sales.salesmen</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="sales_graph_action" model="ir.actions.act_window" >
        <field name="name">Sales Tax Graph</field>
        <field name="res_model">sales</field>
        <field name="view_mode">graph</field>
    </record>

    <record id="sales_products_action" model="ir.actions.act_window" >
        <field name="name">Sales Products</field>
        <field name="res_model">sales.products</field>
        <field name="view_mode">kanban,tree,form,activity</field>
    </record>



    <menuitem id="sales_menu" name="Sales Data" web_icon="sales_practice,static/description/icon.png"/>
    
    <menuitem id="sales1" name="Customers" sequence="1" action="sales_action" parent="sales_menu"/>

    <menuitem id="sales2" name="Vendors" sequence="2" action="sales_activity_action" parent="sales_menu"/>

    <menuitem id="sales6" name="orders" sequence="3" action="sales_products_action" parent="sales_menu"/>

    <menuitem id="sales7" name="Products"  action="sales_products_action" parent="sales6"/>

    <menuitem id="sales5" name="Activity"  action="sales_activity_action" parent="sales2"/>

    <menuitem id="sales3" name="Sales Person" action="sales_salesperson_action" parent="sales2"/>
    
    <menuitem id="sales4" name="Invoice Analysis"  action="sales_graph_action" parent="sales2"/>


</odoo>