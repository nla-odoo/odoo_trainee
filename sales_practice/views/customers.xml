<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_customers_action" model="ir.actions.act_window" >
        <field name="name">Sales Products</field>
        <field name="res_model">sales.customers</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.ui.view" id="customers_tree_view">
            <field name="name">Sales.customers.tree</field>
            <field name="model">sales.customers</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="customer_name"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <field name="company_address"/>
                    <field name="phone_no"/>
                    <field name="email"/>
                    <field name="person_contact"/>
                    <field name="person_name"/>
                </tree>
            </field>
    </record>


     <record model="ir.ui.view" id="customers_form_view">
            <field name="name">Sales.customers.form</field>
            <field name="model">sales.customers</field>
            <field name="arch" type="xml">
                <form string="Sales Person Form">
                    <sheet>
                        <header>
                        </header><br/>
                        <div class="oe_title">
                           <h1>
                               <strong><h1><field name="customer_name"/></h1></strong>
                           </h1>
                        </div>
                        <div class="container">
                            <div class="row">
                               <div class="col-6">
                                    <group>
                                        <field name="company_address" style="width:50%"/>
                                        <field name="phone_no" style="width:50%"/>   
                                        <field name="email" style="width:50%"/>                   
                                    </group>
                               </div>
                               <div class="col-4">
                                    <field name="image" widget="image" class="oe_avatar"/><br/>
                               </div>
                            </div>
                        </div>
                        
                        <br/><br/>

                        <notebook>
                            <page string="Person Detail">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-6">
                                            <group>
                                                <field name="person_contact"/>
                                                <field name="person_name"/> 
                                                <field name="person_position"/>
                                                <field name="person_email"/>                                     
                                            </group>
                                        </div>
                                        <div class="col-4">
                                            <field name="person_image" widget="image" class="oe_avatar"/><br/>
                                        </div>
                                    </div>
                                </div>    
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="sales_customers_kanban" model="ir.ui.view">
            <field name="name">sales.customers.view</field>
            <field name="model">sales.customers</field> 
            <field name="arch" type="xml">
                <kanban>
                    <field name="customer_name"/>
                    <field name="image" widget="image"/>
                    <field name="id"/>
                       <templates>  
                           <t t-name="kanban-box">
                                <div class="container">
                                
                                 <div class="o_kanban_image"> 
                                       <img t-att-src="kanban_image('sales.customers', 'image', record.id.raw_value)"  alt="Avatar"/>
                                    </div>
                                 <div class="row">
                                   <div class="col-8">
                                        <div class="oe_kanban_details">
                                           <strong class="o_kanban_record_title"> 
                                           <field name="customer_name"/></strong>
                                        </div>
                                        <div class="oe_kanban_details">
                                           <strong   class="o_kanban_record_title"></strong>
                                           <field name="company_address"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                           <strong   class="o_kanban_record_title"></strong>
                                           <field name="email"/>
                                        </div>
                                   </div>

                               </div>
                               </div>
                           </t>          
                       </templates>       
                </kanban>   
            </field>
        </record>	



    <menuitem id="sales8" name="Customers"  action="sales_customers_action" parent="sales6"/>
</odoo>