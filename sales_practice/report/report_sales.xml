<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <report
        id="sales_report_card"
        model="sales"
        string="Print"
        name="sales_practice.sales_report"
        file="sales_practice.sales_report"
        report_type="qweb-pdf"
        attachment_use="True"
    />


    <template id="sales_report">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
          <center>
                <h1>Sales Data</h1>
            </center><br/>
                    <table style="width:100%;border: 2px solid #ddd;padding: 8px; ">
                       <thread>
                       <tr>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Address</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Number</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Customer</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Invoice Date</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Tax</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #000000;">Total</th>
                       </tr>
                       <t t-foreach="docs" t-as="o">
                       <tr  style="border: 2px solid #ddd;padding: 8px;">
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.address"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="o.number_seq"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="o.customer"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.invoice_date"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.taxt_included" sum="Tax su#000000"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.total" sum="Total"/>
                       </td>
                       </tr>
                       </t>
                       </thread>
                    </table>
                     <br/>
                    <br/>
                    <center>
                    <t t-foreach="docs" t-as="o">
                    <table class="table table-bordered mb-0" style="border: 2px solid black;">
                        <tr>
                            <td class="text-center align-middle" style="height: 16rem">
                                <img alt="Barcode" t-att-src="'report/barcode/?type=%s&amp;value=%s&amp;height=%s&amp;width=%s' %('EAN13',o.number_seq,250,400)" style="width:50%;height:80%;"/>
                                <span t-field="o.number_seq"/>
                            </td>
                        </tr>                       
                    </table> 
                    <br/><br/>
                    </t>
                    </center>
        </t>
        </t>
    </template>
</odoo>