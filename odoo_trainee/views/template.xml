<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="students" name="Students">
        <t t-call="website.layout">
            <center>
            <br/>
                <strong><h1 style="font-family:monospace;">Student Data</h1></strong>
                <a type="button" name="create_student" class="btn btn-primary" t-attf-href="/create_students">Create</a>
            </center><br/>
            
            <div class="container">
                <table style="width:100%;border: 2px solid #ddd;padding: 8px; ">
                       <thread>
                       <tr>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #282F33;font-family:monospace;font-size:15px;">Name</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #282F33;font-family:monospace;font-size:15px;">Enrollment No</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #282F33;font-family:monospace;font-size:15px;">Email</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #282F33;font-family:monospace;font-size:15px;">Contact</th>
                       <th style="border: 2px solid #ddd;padding: 8px;color:white;background-color: #282F33;font-family:monospace;font-size:15px;">Gender</th>
                       </tr>
                       <t t-foreach="students" t-as="o">
                       <tr  style="border: 2px solid #ddd;padding: 8px;">
                       <td style="border: 2px solid #ddd;padding: 8px;font-family:monospace;font-size:15px;">
                       <span t-field="o.name"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;font-family:monospace;font-size:15px;"> 
                       <span t-field="o.enrollmentNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;font-family:monospace;font-size:15px;"> 
                       <span t-field="o.email"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;font-family:monospace;font-size:15px;"> 
                       <span t-field="o.contactNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;font-family:monospace;font-size:15px;"> 
                       <span t-field="o.gender"/>
                       </td>
                       <td style="border:none">
                            <a type="button" class="btn btn-success" t-attf-href='/students/show/#{o.id}' >View Details</a>
                        </td>
                       <td style="border:none">
                            <a type="button" class="btn btn-danger" t-attf-href='/students/delete/#{o.id}' >Delete</a>
                        </td>
                       </tr>
                       </t>
                       </thread>
                </table>
            </div>
        </t>
    </template>
    
