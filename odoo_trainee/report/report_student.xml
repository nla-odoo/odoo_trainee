<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <report
        id="student_report_card"
        model="student"
        string="Student Data"
        name="odoo_trainee.student_report"
        file="odoo_trainee.student_report"
        report_type="qweb-pdf"
        attachment_use="True"
    />

     <report
        id="report_student_primary"
        model="student"
        string="Student Report Primary"
        name="odoo_trainee.inherit_report_student_view_primary"
        file="odoo_trainee.report_student"
        report_type="qweb-pdf" 
        attachment_use="True"/>


    <template id="student_report">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
        <div class="page">
          <center>
                <h1>student Data</h1>
            </center><br/>
                    <table style="width:100%;border: 2px solid #ddd;padding: 8px; ">
                       <thread>
                       <tr>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Name</th>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Roll NO</th>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">College</th>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Date of Birth</th>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Contact</th>
                       <th style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Email</th>
                       </tr>
                       <t t-foreach="docs" t-as="o">
                       <tr  style="border: 2px solid #ddd;padding: 8px;">
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.name"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="o.enrollmentNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;"> 
                       <span t-field="o.college_id"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.bdate"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.contactNo"/>
                       </td>
                       <td style="border: 2px solid #ddd;padding: 8px;">
                       <span t-field="o.email"/>
                       </td>
                       </tr>
                       </t>
                       </thread>
                    </table>
                    <br/>
                    <br/>
                    <center>
                    <t t-foreach="docs" t-as="o">
                    <table class="table table-bordered mb-0" style="border: 2px solid black;">
                        <tr>
                            <td class="text-center align-middle" style="height: 16rem">
                                <img alt="Barcode" t-att-src="'report/barcode/?type=%s&amp;value=%s&amp;height=%s&amp;width=%s' %('EAN13',o.name_seq,250,400)" style="width:50%;height:80%;"/>
                                <span t-field="o.name_seq"/>
                            </td>
                        </tr>                       
                    </table> 
                    <br/><br/>
                    </t>
                    </center>
                    </div>
        </t>
        </t>
    </template>

    <template id="inherit_report_student_view" inherit_id="student_report">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <h2>Inside</h2>
        </xpath>
      <xpath expr="(//th)[1]" position="after">
        <th scope="col" style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Gender</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center'><span t-field="o.gender"/></td>
      </xpath>
    </template>

    <template id="inherit_report_student_view_primary" inherit_id="student_report" primary="True">
      <xpath expr="(//th)[1]" position="after">
        <th scope="col" style="border: 2px solid #ddd;padding: 8px;background-color: #4CAF50;">Branch</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center' ><span t-field="o.branch"/></td>
      </xpath>
    </template>

</odoo>