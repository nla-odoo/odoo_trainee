<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<data>
		<record model="ir.module.category" id="module_category_employee_demo">
			<field name="name">Module Access</field>
			<field name="description">Access rights category</field>
			<field name="sequence">1</field>
		</record>
		<record id="group_employee_detail" model="res.groups">
			<field name="name">User</field>
			<!-- <field name="description">Users access the data</field> -->
			<field name="category_id" ref="module_category_employee_demo"/>
			<field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
		</record>
		<record id="group_company_admin" model="res.groups">
			<field name="name">Administrator</field>
			<!-- <field name="description">Administrator access the data</field> -->
			<field name="category_id" ref="module_category_employee_demo"/>
			<field name="implied_ids" eval="[(4, ref('group_employee_detail'))]"/>
			<field name="users" eval="[(4, ref('base.user_admin'))]"/>
		</record>
		<record model="ir.rule" id="rule">
			<field name="name">Employee</field>
			<field name="model_id" ref="employee_demo.model_employee"/>
			<field name="global" eval="True"/>
			<field name="domain_force">[('create_uid','=',user.id)]</field>
			<!-- <field name="groups" eval="[(4, ref('admin_access')),(4, ref('user_access'))]"/> -->
		</record>
	</data>
</odoo>
