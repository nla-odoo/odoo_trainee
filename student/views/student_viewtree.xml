<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="open_hooby_from_action" model="ir.actions.act_window">
        <field name="name">Hobbys1</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.hobby</field>
        <!-- <field name="view_type">form</field> -->
        <field name="domain">[('hobby_id','=',active_ids)]</field>
        <field name="view_mode">tree,form</field> 
        <field name="view_id" ref="hobby_view_tree"/> 
        <field name="binding_model_id" ref="model_student"/>
    </record>  
    <record id="open_hobby" model="ir.actions.act_window">
        <field name="name">Hobbys</field>
        <field name="res_model">student.hobby</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('hobby_id','in',active_ids)]</field>
        <field name="context">{'name':'Hobbies'}</field>
    </record>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_seq"/>
                <field name="student_name"/>
                <field name="roll_no"/>
                <field name="birthdate"/>
                <field name="image" widget="image" class="oe_avatar"/>
                <field name="gender" widget="radio"/>
                <field name="age"/>
                <field name="branch"/>
                <field name="physics" avg="Average of physics"/>
                <field name="maths" avg="Average of maths"/>
                <field name="chemistry" avg="Average of chemistry"/>
                <field name="total"/>
                <field name="Average"/>
                <field name="total_compute"/>
                <field name="html"/>
                <field name="current_date"/>
                <field name="Address"/>
                <field name="email_id"/>
                <field name="contect_no"/>
                <field name="college_id"/>
                <field name="Hobbies" widget="many2many_tags"/>
                <field name="review"/>
            </tree>
        </field> 
    </record>
    <record id="student_view_calender" model="ir.ui.view" >
        <field name="name">Student.calender</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <calendar string="Calender View" date_start="birthdate" color="roll_no">
                <field name="student_name" />
                <field name="birthdate"/>
            </calendar>
        </field>
    </record>
    <record id="student_view_kanban" model="ir.ui.view">
        <field name="name">Student.kanban</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="student_name"/>
                <field name="branch"/>
                <field name="roll_no"/>
                <field name="id"/>
                <field name="contect_no"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('student','image',record.id.raw_value)" alt="Image"/>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="oe_kanban_details">
                                            <strong class="o_kanban_record_title">
                                                <field name="student_name"/>
                                        </strong>
                                        </div>
                                        <div t-if="record.Address.value">
                                            <strong>Address</strong>:<field name="Address"/>
                                        </div>
                                        <div t-if="record.contect_no.value">
                                            <strong>Contect No</strong>:<field name="contect_no"/>
                                        </div>
                                        <div t-if="record.branch.value">
                                            <span class="badge rounded-pill bg-primary">
                                                <field name="branch"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left"/>
                                        <div class="oe_kanban_bottom_right">
                                            <a title="Chat" icon="fa-comments" href="#" class="ml8 o_employee_chat_btn" attrs="{'invisible': [('student_name','=', False)]}" role="button"><i class="fa fa-comments"/></a>
                                        </div>
                                    </div>
                                </div>
                            </div>    
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_view_search" model="ir.ui.view">
        <field name="name">Student.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_name"/>
                <field name="Address"/>
                <filter string="Male" name="male" domain=
                "[('gender','=','male')]"/>
                <separator />
                <filter string="Female" name="female" domain=
                "[('gender','=','female')]"/>  
                <separator/>
                <filter string="Address_Mehsana" name="Address" domain=
                "[('Address','=','Mehsana')]"/>
                <separator/>
                <filter string="Branch_comp" name="branch" domain=
                "[('branch','=','computer')]"/>

                <group> 
                    <filter string="Group_by_Address" name="Address" context=
                    "{'group_by':'Address'}"/>
                    <filter string="Group_by_Branch" name="branch" context=
                    "{'group_by':'branch'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="student_view_form" model="ir.ui.view" >
        <field name="name">Student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(email_template_studentdata)d" type="action" string="send mail" class="oe_highlight"/>
                    <button name="%(student.student_wizard_action)d" type="action" string="Add College" class="oe_highlight"/>
                    <button name="Action_status_good" states="Dontknow" type="object" string="Good" class="oe_highlight"/>
                    <button name="Action_status_bad" states="Good" type="object" string="Bad" class="oe_highlight"/>
                    <button name="Action_status_dontknow" states="bad" type="object" string="Dontknow" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="Dontknow,Good,bad"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_college" string="(O)Colleges" type="object" class="btn oe_stat_button"
                        icon="fa-calendar"/>
                        <button name="%(open_hobby)d" string="(A)Hobbies" type="action" class="btn oe_stat_button"
                        icon="fa-gittip">
                            <field name="Hobbies_count"  widget="statinfo" />
                        </button>
                        <button name="toggle_active" string="Archive" type="object" class="btn oe_stat_button"
                        icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <separator string="Personal Details"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_name"/>
                            <field name="gender" widget="radio"/>
                            <field name="birthdate"/>
                            <field name="age"/>
                        </group>
                        <group >
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="contect_no"/>
                            <field name="Hobbies" widget="many2many_tags"/>
                            <field name="Address"/>
                            <field name="email_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Acadamic Details">
                            <group>
                                <group>
                                    <field name="branch"/>
                                    <field name="roll_no"/>
                                </group>
                                <group> 
                                    <field name="college_id"  options="{'no_create_edit':True , 'no_create':True , 'no_open':True}"/>
                                    <field name="review"/>
                                </group>
                          </group>
                        </page>
                        <page string="Marks Details">
                            <group>
                                <group>
                                    <field name="physics"/>
                                    <field name="maths"/>
                                    <field name="chemistry"/>
                                </group>
                                <group>
                                    <field name="total"/>
                                    <field name="Average"/>
                                    <field name="total_compute"/>   
                                </group>
                            </group>
                        </page>
                   </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_view_ganttchart" model="ir.ui.view" >
        <field name="name">Student.gantt</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <gantt date_start="birthdate" date_stop="current_date" string="Gantt Chart">
            </gantt>
        </field>
    </record>
    <record id="student_view_graph" model="ir.ui.view">
        <field name="name">Student.graph</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
           <graph string="graph view">
               <field name="student_name"/>
               <field name="Average" type="measure"/>
           </graph>
        </field>
    </record>
    <record id="college_view_tree" model="ir.ui.view" >
        <field name="name">college.tree</field>
        <field name="model">student.college</field>
        <field name="arch" type="xml">
            <tree>
                <field name="college_name"/>
                <field name="college_city"/>
            </tree>
        </field>
    </record>
    <record id="college_view_form" model="ir.ui.view" >
        <field name="name">college.form</field>
        <field name="model">student.college</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="college_name"/>
                        <field name="college_city"/>
                        <field name="Student_record">
                            <tree>
                                <field name="student_name"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hobby_view_tree" model="ir.ui.view" >
        <field name="name">hobby.tree</field>
        <field name="model">student.hobby</field>
        <field name="arch" type="xml">
            <tree>
                <field name="hobby_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="student_action1" model="ir.actions.act_window">
        <field name="name">Tree</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{"search_default_male":1}</field>
    </record>
    <record id="student_action2" model="ir.actions.act_window">
        <field name="name">Graph</field>
        <field name="res_model">student</field>
        <field name="view_mode">graph,gantt,kanban,form</field>
    </record>
    <record id="college_action1" model="ir.actions.act_window">
        <field name="name">College_details</field>
        <field name="res_model">student.college</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="hobby_action" model="ir.actions.act_window">
        <field name="name">hobby_details</field>
        <field name="res_model">student.hobby</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="student_menu" name="Student Data" web_icon="student,static/description/icon.png"/>
    <menuitem id="Details1" name="Details1" sequence="1" action="student_action1" parent="student_menu"/>
    <menuitem id="Details2" name="Details2" sequence="2" action="student_action2" parent="student_menu"/>
    <menuitem id="college1" name="College_menu" sequence="3" action="college_action1" parent="student_menu"/>
    <menuitem id="Hobby" name="Hobby_menu" sequence="4" action="hobby_action" parent="student_menu"/>
    
</odoo>