<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="birthdate"/>
                <field name="image" widget="image" class="oe_avatar"/>
                <field name="gender" widget="radio"/>
                <field name="age"/>
                <field name="branch"/>
                <field name="physics"/>
                <field name="maths"/>
                <field name="chemistry"/>
                <field name="total"/>
                <field name="Average"/>
                <field name="total_compute"/>
                <field name="html"/>
                <field name="current_date"/>
                <field name="Address"/>
                <field name="contect_no"/>
                <field name="college_id"/>
            </tree>
        </field> 
    </record>
    <record id="student_view_calender" model="ir.ui.view" >
        <field name="name">Student.calender</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <calendar string="Calender View" date_start="birthdate" color="roll_no">
                <field name="name" />
                <field name="birthdate"/>
            </calendar>
        </field>
    </record>
    <record id="student_view_kanban" model="ir.ui.view">
        <field name="name">Student.kanban</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="branch"/>
                <field name="contect_no"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_background_grey">
                            <div class="row">
                                <div class="col-9">
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div t-if="record.Address.value">
                                        <strong>Address</strong>:<field name="Address"/>
                                    </div>
                                    <div t-if="record.contect_no.value">
                                        <strong>Contect No</strong>:<field name="contect_no"/>
                                    </div>
                                </div>
                                <div class="col-1" t-if="record.branch.value">
                                    <span class="badge rounded-pill bg-primary">
                                        <field name="branch"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_view_search" model="ir.ui.view">
        <field name="name">Student.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="Address"/>
                <filter string="Male" name="male" domain=
                "[('gender','=','male')]"/>
                <separator />
                <filter string="Female" name="female" domain=
                "[('gender','=','female')]"/>  
                <separator/>
                <filter string="Address_Mehsana" name="Address" domain=
                "[('Address','=','Mehsana')]"/>
                <separator/>
                <filter string="Branch_comp" name="branch" domain=
                "[('branch','=','computer')]"/>

                <group> 
                    <filter string="Group_by_Address" name="Address" context=
                    "{'group_by':'Address'}"/>
                    <filter string="Group_by_Branch" name="branch" context=
                    "{'group_by':'branch'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="student_view_form" model="ir.ui.view" >
        <field name="name">Student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <notebook>
                    <page string="Personal Details">
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender" widget="radio"/>
                                <field name="birthdate"/>
                                <field name="age"/>
                            </group>
                            <group >
                                <field name="image" widget="image" class="oe_avatar"/>
                                <field name="contect_no"/>
                                <field name="Address"/>
                            </group>
                        </group>
                    </page>
                    <page string="Acadamic Details">
                        <group>
                            <group>
                                <field name="branch"/>
                                <field name="roll_no"/>
                            </group>
                            <group> 
                                <field name="college_id"/>
                            </group>
                        </group>
                    </page>
                    <page string="Marks Details">
                        <group>
                            <group>
                                <field name="physics"/>
                                <field name="maths"/>
                                <field name="chemistry"/>
                            </group>
                            <group>
                                <field name="total"/>
                                <field name="Average"/>
                                <field name="total_compute"/>   
                            </group>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    <record id="student_view_ganttchart" model="ir.ui.view" >
        <field name="name">Student.gantt</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <gantt date_start="birthdate" date_stop="current_date" string="Gantt Chart">
            </gantt>
        </field>
    </record>
    <record id="student_view_graph" model="ir.ui.view">
        <field name="name">Student.graph</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
           <graph string="graph view">
               <field name="name"/>
               <field name="Average" type="measure"/>
           </graph>
        </field>
    </record>
    <record id="college_view_tree" model="ir.ui.view" >
        <field name="name">college.tree</field>
        <field name="model">student.college</field>
        <field name="arch" type="xml">
            <tree>
                <field name="college_name"/>
                <field name="college_city"/>
            </tree>
        </field>
    </record>
    <record id="college_view_form" model="ir.ui.view" >
        <field name="name">college.form</field>
        <field name="model">student.college</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="college_name"/>
                        <field name="college_city"/>
                        <field name="Student_record"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_action1" model="ir.actions.act_window">
        <field name="name">Tree</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>
    <record id="student_action2" model="ir.actions.act_window">
        <field name="name">Graph</field>
        <field name="res_model">student</field>
        <field name="view_mode">graph,gantt,kanban</field>
    </record>
    <record id="college_action1" model="ir.actions.act_window">
        <field name="name">College_details</field>
        <field name="res_model">student.college</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="student_menu" name="Student Data"/>
    <menuitem id="Details1" name="Details1" sequence="1" action="student_action1" parent="student_menu"/>
    <menuitem id="Details2" name="Details2" sequence="1" action="student_action2" parent="student_menu"/>
    <menuitem id="college1" name="Cmenu" sequence="3" action="college_action1" parent="student_menu"/>
    
</odoo>