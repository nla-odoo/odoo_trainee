<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="birthdate"/>
                <field name="image" widget="image" class="oe_avatar"/>
                <field name="gender" widget="radio"/>
                <field name="age"/>
                <field name="branch"/>
                <field name="physics"/>
                <field name="maths"/>
                <field name="chemistry"/>
                <field name="Average"/>
                <field name="html"/>
                <field name="current_date"/>
                <field name="Address"/>
                <field name="contect_no"/>
            </tree>
        </field> 
    </record>
    <record id="student_view_calender" model="ir.ui.view" >
        <field name="name">Student.calender</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <calendar string="Calender View" date_start="birthdate" color="roll_no">
                <field name="name" />
                <field name="birthdate"/>
            </calendar>
        </field>
    </record>
    <record id="student_view_kanban" model="ir.ui.view">
        <field name="name">Student.kanban</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="branch"/>
                <field name="contect_no"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_background_grey">
                        <div class="row">
                            <div class="col-9">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div t-if="record.Address.value">
                                    <strong>Address</strong>:<field name="Address"/>
                                </div>
                                <div t-if="record.contect_no.value">
                                    <strong>Contect No</strong>:<field name="contect_no"/>
                                </div>
                            </div>
                            <div class="col-1" t-if="record.branch.value">
                                <span class="badge rounded-pill bg-primary">
                                    <field name="branch"/>
                                </span>
                            </div>
                        </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_view_search" model="ir.ui.view">
        <field name="name">Student.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="Address"/>
                <filter string="Male" name="male" domain=
                "[('gender','=','male')]"/>
                <separator />
                <filter string="Female" name="female" domain=
                "[('gender','=','female')]"/>  
                <separator/>
                <filter string="Address_Mehsana" name="Address" domain=
                "[('Address','=','Mehsana')]"/>
                <separator/>
                <filter string="Branch_comp" name="branch" domain=
                "[('branch','=','computer')]"/>

                <group> 
                    <filter string="Group_by_Address" name="Address" context=
                    "{'group_by':'Address'}"/>
                    <filter string="Group_by_Branch" name="branch" context=
                    "{'group_by':'branch'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="student_view_form" model="ir.ui.view" >
        <field name="name">Student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <separator string="General Details" colspan="2"/>
                        <group>
                            <field name="name"/>
                            <field name="roll_no"/>
                        </group>
                        <group >
                            <field name="image"/>
                            <field name="birthdate"/>
                            <field name="age"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Personal Details" colspan="2"/>
                        <group>
                            <field name="gender" widget="radio"/>
                        </group>
                        <group>
                            <field name="contect_no"/>
                            <field name="Address"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Acadamic Details" colspan="2"/>
                        <group>
                            <field name="physics"/>
                            <field name="maths"/>
                            <field name="chemistry"/>
                        </group>
                        <group>
                            <field name="Average"/>
                            <field name="branch"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_view_ganttchart" model="ir.ui.view" >
        <field name="name">Student.gantt</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <gantt date_start="birthdate" date_stop="current_date" string="Gantt Chart">
            </gantt>
        </field>
    </record>
    <record id="student_view_graph" model="ir.ui.view">
        <field name="name">Student.graph</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
           <graph string="graph view">
               <field name="name"/>
               <field name="Average" type="measure"/>
           </graph>
        </field>
    </record>
    <record id="student_action" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="student_action2" model="ir.actions.act_window">
        <field name="name">student2</field>
        <field name="res_model">student</field>
        <field name="view_mode">graph</field>
    </record>
    <record id="student_action3" model="ir.actions.act_window">
        <field name="name">student3</field>
        <field name="res_model">student</field>
        <field name="view_mode">calendar</field>
    </record>
    <record id="student_action6" model="ir.actions.act_window">
        <field name="name">student6</field>
        <field name="res_model">student</field>
        <field name="view_mode">form</field>
    </record>
    <record id="student_action4" model="ir.actions.act_window">
        <field name="name">student4</field>
        <field name="res_model">student</field>
        <field name="view_mode">gantt</field>
    </record>
    <record id="student_action5" model="ir.actions.act_window">
        <field name="name">student5</field>
        <field name="res_model">student</field>
        <field name="view_mode">kanban</field>
    </record>
    <menuitem id="student_menu" name="Student Data"/>
    <menuitem id="student" name="Tree" sequence="1" action="student_action" parent="student_menu"/>
    <menuitem id="student2" name="Graph" sequence="2" action="student_action2" parent="student_menu"/>
    <menuitem id="student3" name="Calender" sequence="2" action="student_action3" parent="student_menu"/>
    <menuitem id="student4" name="Form" sequence="2" action="student_action6" parent="student_menu"/>
    <menuitem id="student5" name="Gantt" sequence="2" action="student_action4" parent="student_menu"/>
    <menuitem id="student6" name="Kanban" sequence="2" action="student_action5" parent="student_menu"/>
   
</odoo>