<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
    id = "student_report"
    model = "student"
    string = "Student Data"
    name = "student.New_data"
    file = "student.New_data"
    report_type = "qweb-pdf"
    attachment_use = "True"
    />
    <!-- <report
    id = "student_report_xml"
    model = "student"
    string = "Student Xml Data"
    name = "module_name.report_name"
    file = "student.Xml_data"
    report_type = "xlsx"
    attachment_use = "False"
    /> -->
    <report
        id="report_student_primary"
        model="student"
        string="Student Report Primary"
        name="student.inherit_report_student_view_primary"
        file="student.report_student"
        report_type="qweb-pdf" 
        attachment_use="True"/>

    <template id="New_data">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            <div class="page">
                <center>
                    <h2>Student Data</h2>
                </center>
                <br></br>
                <table style="width:100%;border: 1px solid black;">
                    <thread>
                        <tr>
                            <th style="border: 1px solid black;">Name</th>
                            <th style="border: 1px solid black;">Roll NO</th>
                            <th style="border: 1px solid black;">College</th>
                            <th style="border: 1px solid black;">Address</th>
                            <th style="border: 1px solid black;">Birthdate</th>
                            <th style="border: 1px solid black;">Gender</th>
                            <!-- <th style="border: 1px solid black;">Image</th> -->
                            <th style="border: 1px solid black;">Hobbies</th>
                            
                        </tr>
                    </thread>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td style="border: 1px solid black;"><span t-field="o.student_name"/></td>
                                <td style="border: 1px solid black;"><span t-field="o.roll_no"/></td>
                                <td style="border: 1px solid black;"><span t-field="o.college_id"/></td>
                                <td style="border: 1px solid black;"><span t-field="o.Address"/></td>
                                <td style="border: 1px solid black;"><span t-field="o.birthdate"/></td>
                                <td style="border: 1px solid black;"><span t-field="o.gender"/></td>
                                <!-- <td style="border: 1px solid black;"><img t-field="o.image" alt="Image"/></td> -->
                                <!-- <td style="border: 1px solid black;" colspan="4">
                                    <img t-field="o.image" src="kanban_image('student','image',record.id.raw_value)"
                                     alt="" border="3" height="100" width="100" />
                                </td> -->
                                <td style="border: 1px solid black;"><span t-field="o.Hobbies"/></td>
                            </tr> 
                        </t>
                </table>
                <br></br><br></br>
                <br></br><br></br>
                <table style="width:100%;border: 1px solid black;">
                    <t t-foreach="docs" t-as="o">
                    <tr>
                        <td class="text-center align-middle" style="height: 5rem;border: 1px solid black;">
                            <img alt="Barcode" t-att-src="'report/barcode/?type=%s&amp;value=%s&amp;height=%s&amp;width=%s' %('EAN13',o.name_seq,150,600)" style="width:50%;height:4rem"/>
                            <span t-field="o.name_seq"/>
                        </td>
                    </tr>
                    </t>
                </table>
                </div>
            </t>
        </t>
    </template>
    <template id="inherit_report_student_view" inherit_id="New_data">
        <xpath expr="//div[hasclass('page')]" position="inside">
            <h2>Inside</h2>
        </xpath>
      <xpath expr="(//th)[1]" position="after">
        <th scope="col" style="border: 1px solid black;">Branch</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center' style="border: 1px solid black;"><span t-field="o.branch"/></td>
      </xpath>
    </template>

    <template id="inherit_report_student_view_primary" inherit_id="New_data" primary="True">
      <xpath expr="(//th)[1]" position="after">
        <th scope="col" style="border: 1px solid black;">email</th>
      </xpath>
      <xpath expr="(//td)[1]" position="after">
        <td align='center' style="border: 1px solid black;"><span t-field="o.email_id"/></td>
      </xpath>
    </template>
    
</odoo>