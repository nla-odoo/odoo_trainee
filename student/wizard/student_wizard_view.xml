<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_wizard_form" model="ir.ui.view">
        <field name="name">student_college_wizard</field>
        <field name="model">student.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="college_id"/>
                    <!-- <field name="college_city"/> -->
                </group>
                <footer>
                    <button name="add_college" string="Add College" type="object" class="btn btn-primary"/>
                    <button name="get_data" string="Get Data" type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="student_wizard_form_br" model="ir.ui.view">
        <field name="name">student_college_wizard</field>
        <field name="model">student.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="branch1" />
                </group>
                <footer>
                    <button name="add_branch" string="Add Branch" type="object" class="btn btn-primary"/>
                    <!-- <button name="get_data" string="Get Data" type="object" class="btn btn-primary"/> -->
                </footer>
            </form>
        </field>
    </record>
    <record id="student_wizard_action" model="ir.actions.act_window">
        <field name="name">Add College</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_wizard_form"/>
        <field name="binding_model_id" ref="model_student"/>
        <field name="target">new</field>
    </record>
    <record id="student_wizard_action1" model="ir.actions.act_window">
        <field name="name">Add Branch</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_wizard_form_br"/>
        <field name="binding_model_id" ref="model_student"/>
        <field name="target">new</field>
    </record>
</odoo>