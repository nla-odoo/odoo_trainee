<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">Student.tree</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <tree string="Students List">
                <field name="student_name"/>
                <field name="student_age"/>
                <field name="student_percentage"/>
                <field name="student_birthdate"/>
                <field name="current_date"/>
                <field name="gender"/>
                <field name="branch"/>
            </tree>
        </field>
    </record>
    <record id="student_graph" model="ir.ui.view">
        <field name="name">Student.graph</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <graph>
                <field name="student_name"/>
                <field name="student_age"/>
                <field name="student_percentage" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="student_pivot" model="ir.ui.view">
        <field name="name">Student.pivot</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="student_name" type="row"/>
                <field name="student_age"  type="col"/>
                <field name="student_percentage" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="student_gantt" model="ir.ui.view">
        <field name="name">Student.gantt</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <gantt date_start="student_birthdate" date_stop="current_date">
            </gantt>
        </field>
    </record>
    <record id="student_view_calender" model="ir.ui.view">
        <field name="name">student.Calendar</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <calendar date_start="student_birthdate" color="student_name">
                <field name="student_name"/>
                <field name="student_birthdate" required="1"/>
                <field name="student_age"/>
                <field name="student_percentage"/>
            </calendar>
        </field>
    </record>
    <record model="ir.ui.view" id="student_search_view">
            <field name="name">Student.search</field>
            <field name="model">student.details</field>
            <field name="arch" type="xml">
                <search>
                    <field name="student_name"/>
                    <field name="student_age"/>
                    <field name="student_percentage"/>
                    <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                    <separator/>
                    <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                    <group>
                    <filter string="Branch" name='branch' context="{'group_by':'branch'}"/>
                    </group>
                </search>
            </field>
    </record>
    <record id="student_kanban" model="ir.ui.view">
        <field name="name">Student.kanban</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-6">
                                    <strong><field name="student_name"/></strong>
                                </div>
                                <div class="col-6 text-right">
                                    <span class="badge badge-pill"><field name="student_percentage"/></span>
                                    <span class="badge badge-pill"><field name="student_birthdate"/></span>
                                </div>
                            </div>
                            <div>
                                <strong>Age : </strong><field name="student_age"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_form" model="ir.ui.view">
        <field name="name">Student.form</field>
        <field name="model">student.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <group>
                        <field name="student_name"/>
                        <field name="branch"/>
                        <field name="gender"/>
                        <field name="student_percentage"/>
                    </group>
                    <group>
                        <field name="student_birthdate"/>
                        <field name="current_date"/>
                        <field name="student_age"/>
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_action" model="ir.actions.act_window" >
        <field name="name">Student</field>
        <field name="res_model">student.details</field>
        <field name="view_mode">tree,form,kanban,graph,pivot,gantt,calendar,search</field>
    </record>
    <menuitem id="student_menu" name="Student" sequence="0" />
    <menuitem id="student_details" name="Details" parent="student_menu" action="student_action"/>
</odoo>
