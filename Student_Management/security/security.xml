<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_student" model="ir.module.category">
        <field name="name">Student Management</field>
        <field name="description">Catagory for Student</field>
        <field name="sequence">45</field>
    </record>

    <record id="group_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref='module_category_student'/>
    </record>


    <record id="group_student_all" model="res.groups">
        <field name="name">Student All</field>
        <field name="category_id" ref='module_category_student'/>
    </record>

     <record id="group_college" model="res.groups">
        <field name="name">College</field>
        <field name="category_id" ref='module_category_student'/>
    </record>
    <record id="group_hobbies" model="res.groups">
        <field name="name">Hobbies</field>
        <field name="category_id" ref='module_category_student'/>
    </record>

    <record id="group_student_college" model="res.groups">
        <field name="name">School for Student</field>
        <field name="category_id" ref='module_category_student'/>
    </record>

    <record id="only_responsible_can_modify" model="ir.rule">
        <field name="name">Responsible can modify College</field>
        <field name="model_id" ref="Student_Management.model_student"/>
        <field name="groups" eval="[(4, ref('group_student'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">
            [('create_uid','=',user.id)]
        </field>
    </record>
    
</odoo>
