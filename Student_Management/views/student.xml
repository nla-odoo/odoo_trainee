<odoo>
    <record id="student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree string="strings">
                <field name="sequenceName"/>
                <field name="enrollmentNo"/>
                <field name="name"/>
                <field name="birthdate" />
                <field name="age" />
                <field name="email"/>
                <field name="gender" />
                <field name="contactNo"/>
                <field name="bloodGroup" />
                <field name="college_ids"/>
                <field name="eligible"/>
                <field name="hobbies_ids" widget="many2many_tags"/>
                <field name="city" />
                <field name="country" />
                <field name="branch"/>
                <field name="bloodGroup" />
                <field name="height" />
                <field name="weight" />
                <field name="pincode" />
                <field name="disabled" />
                <field name="active" />
            </tree>
        </field>
    </record>
    <record id="student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                        <button name="action_inProgress" type="object" string="Next" class="oe_highlight" states="applied" />
                        <button name="action_underReview" type="object" string="Next" class="oe_highlight" states="inProgress" />
                        <button name="action_result" type="object" string="Done" class="oe_highlight" states="underReview" />
                        <button name="action_restart" type="object" string="Restart" class="oe_highlight" states="result" />
                        <button name="test_recordset" type="object" string="Record Set Operation" class="oe_highlight"/>
                        
                        <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="student_college" type="object" class="oe_inline oe_stat_button" icon="fa-archive" string="College: ">
                            <field string="Colleges" name="college_ids" widget="statinfo" />
                        </button>
                    </div>

                    <widget name="web_ribbon" text="Male" attrs="{'invisible': [('gender', '=' , 'female')]}" bg_color="bg-primary" />
                    <widget name="web_ribbon" text="Female" attrs="{'invisible': [('gender', '=' , 'male')]}" bg_color="bg-danger" />
                    <div class="oe_title">
                        <h1>
                            <field name="sequenceName" style="width:50%;"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Personal Details" >
                            <group >
                                <field name="image" widget="image" class="oe_avatar" style="float:left;padding-bottom:10px;"/>
                                <field name="name" style="width:25%;"/>
                                <field name="defaultName" style="width:25%;"/>
                                <field name="enrollmentNo" style="width:25%;"/>
                                <field name="birthdate" style="width:25%;"/>
                                <field name="age" style="width:25%;"/>
                                <field name="gender" style="width:25%;" widget="radio"/>
                                <field name="hobbies_ids" widget="many2many_tags" style="width:25%;"/>
                               
                            </group>
                        </page>
                        <page name="page_contact" string="Contact Details">
                            <group>
                                <field name="contactNo" style="width:25%;"/>
                                <field name="email" style="width:25%;"/>
                                <field name="address" style="width:25%;"/>
                                <field name="city" style="width:25%;"/>
                                <field name="pincode" style="width:25%;"/>
                                <field name="country" style="width:25%;"/>
                            </group>
                        </page>
                        <page name="page_other" string="Medical Details">
                            <group>
                                <field name="bloodGroup" style="width:25%;"/>
                                <field name="height" style="width:25%;"/>
                                <field name="weight" style="width:25%;"/>
                                <field name="disabled" style="width:25%;"/>
                            </group>
                        </page>
                        <page name="page_academic" string="Academic Details">
                            <group>
                                <field name="maths" style="width:25%;"/>
                                <field name="chemistry" style="width:25%;"/>
                                <field name="physics" style="width:25%;"/>
                                <field name="total" style="width:25%;" />
                                <field name="average" style="width:25%;"/>
                                <field name="college_ids" style="width:25%;" />
                                <field name="branch" style="width:25%;"/>
                                <field name="eligible" style="width:25%;"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <sheet>
                    <group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail.followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="student_calendar" model="ir.ui.view">
        <field name="name">student.calendar</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <calendar string="students" date_start="birthdate" color="name">
                <field name="name"/>
                <field name="branch" />
                <field name="email" />
            </calendar>
        </field>
    </record>
    <record id="student_graph" model="ir.ui.view">
        <field name="name">student.graph</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <graph string="students">
                <field name="name"/>
                <field name="enrollmentNo" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="student_pivot" model="ir.ui.view">
        <field name="name">student.pivot</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <pivot string="students">
                <field name="name" type="row"/>
                <field name="enrollmentNo" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="student_search" model="ir.ui.view">
        <field name="name">student.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search string="students">
                <field name="name" />
                <field name="enrollmentNo" />
                <field name="email" />
                <field name="college_ids" />
                <group expand="1" string="Group By">
                    <filter name="group_branch" string="Branch" context="{'group_by': 'branch'}" />
                    <separator />
                    <filter name="group_city" string="City" context="{'group_by': 'city'}"/>
                    <separator />
                    <filter name="group_country" string="Country" context="{'group_by': 'country'}"/>
                </group>
                <filter name="filter_male" string="Male" domain="[('gender', '=', 'male')]" />
                <separator />
                <filter name="filter_female" string="Female" domain="[('gender', '=', 'female')]" />
                <separator />
                <filter name="filter_Archive" string="Archived" domain="[('active', '=', False)]" />
                <separator />
                <searchpanel>
                    <field name="gender" />
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="student_kanban" model="ir.ui.view">
        <field name="name">Student.kanban</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id" />
                <field name="name" />
                <field name="email" />
                <field name="city" />
                <field name="birthdate" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('student', 'image', record.id.raw_value)" class="oe_kanban_image" alt="Avatar"/>
                            </div>
                            <div class="row">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title" > Name: </strong>
                                    <field name="name" />
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title" > Date of Birth: </strong>
                                    <field name="birthdate" />
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title" > Email: </strong>
                                    <field name="email" />
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title" > City: </strong>
                                    <field name="city" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="student_gantt" model="ir.ui.view">
        <field name="name">student.gantt</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <gantt string="students" date_start="birthdate" date_stop="dateTo" default_group_by="gender">
                <field name="name"/>
                <field name="enrollmentNo"/>
            </gantt>
        </field>
    </record>
    <record id="student_form_inherit" model="ir.ui.view">
        <field name="name">student_form</field>
        <field name="model">college</field>
        <field name="inherit_id" ref="Student_Management.college_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='collegeName']" position="after">
                <group>
                    <field name="city"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="college_tree" model="ir.ui.view">
        <field name="name">college.tree</field>
        <field name="model">college</field>
        <field name="arch" type="xml">
            <tree string="Colleges">
                <field name="collegeName"/>
                <field name="collegeCity" />
                <!-- <field name="city" /> -->
            </tree>
        </field>
    </record>
    <record id="college_form" model="ir.ui.view">
        <field name="name">college.form</field>
        <field name="model">college</field>
        <field name="arch" type="xml">
            <form string="Colleges">
                <sheet string="Colleges">
                    <group>
                        <div>
                        <field name="collegeName" style="width:25%;"/>
                        <field name="collegeCity" style="width:25%;"/>
                        </div>
                    </group>
                    <group>
                        <field name="student_ids">
                            <tree width="175">
                                <field name="enrollmentNo"/>
                                <field name="name"/>
                                <field name="birthdate" />
                                <field name="age" />
                                <field name="gender" />
                                <field name="email"/>
                                <field name="city" />
                                <field name="hobbies_ids" widget="many2many_tags"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

