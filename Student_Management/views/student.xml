    <menuitem id="student_menu" name="Student Data" web_icon = "Student_Management,static/description/icon.png"/>
    <menuitem id="student" name="Student Details" sequence="1" action="student_action" parent="student_menu"/>
    <menuitem id="college" name="College Details" sequence="2" action="college_action" parent="student_menu" groups="Student_Management.group_college"/>
