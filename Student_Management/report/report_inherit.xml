<odoo>
    <report
        id="report_student"
        model="student"
        string="Print Student Report"
        name="Student_Management.report_student_view"
        file="Student_Management.report_student"
        report_type="qweb-pdf" 
        attachment_use="True"/>
    <report
        id="report_student_primary"
        model="student"
        string="Print Student Report Primary"
        name="Student_Management.inherit_report_student_view_primary"
        file="Student_Management.report_student"
        report_type="qweb-pdf" 
        attachment_use="True"/>
    <template id="report_student_view">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                            <h1 style="font-size: 30px">
                                <b>Student Report Card</b>
                            </h1>
                          <br></br>
                          <br></br>
                        <table class="table" style="width:100%;border: 1px solid black;">
                            <thead>
                                <tr style="background-color:lightgray;">
                                    <th style="border: 1px solid black;text-align: center;">Student Photo</th>
                                    <th style="border: 1px solid black;text-align: center;">Name</th>
                                    <th style="border: 1px solid black;text-align: center;">Branch</th>
                                    <th style="border: 1px solid black;text-align: center;">Age</th>
                                </tr>
                            </thead>
                            <t t-foreach="docs" t-as="doc">
                                <tbody>
                                    <tr>
                                        <td style="border: 1px solid black;text-align: center;padding: 10px;">
                                            <div align="center">
                                                <img t-attf-src="data:image/*;base64,{{doc.image}}" style="width:100px;"/>
                                            </div>
                                        </td>
                                        <td style="border: 1px solid black;text-align: center;padding: 10px;">
                                            <span t-field="doc.name"/>
                                        </td>
                                        <td style="border: 1px solid black;text-align: center;padding: 10px;">
                                            <span t-field="doc.branch"/>
                                        </td>
                                        <td style="border: 1px solid black;text-align: center;padding: 10px;">
                                            <span t-field="doc.age"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </t>
                        </table>
                    </center>
                </div>
            </t>
        </t>
    </template>
    <template id="inherit_report_student_view" inherit_id="report_student_view">
        <xpath expr="(//th)[1]" position="after">
            <th style="border: 1px solid black;text-align: center;">Gender</th>
        </xpath>
        <xpath expr="(//td)[1]" position="after">
            <td style="border: 1px solid black;text-align: center;padding: 10px;">
                <span t-field="doc.gender"/>
            </td>
        </xpath>
    </template>
    <template id="inherit_report_student_view_primary" inherit_id="report_student_view" primary="True">
        <xpath expr="(//th)[1]" position="after">
            <th style="border: 1px solid black;text-align: center;">email</th>
        </xpath>
        <xpath expr="(//td)[1]" position="after">
            <td style="border: 1px solid black;text-align: center;padding: 10px;">
                <span t-field="doc.email"/>
            </td>
        </xpath>
    </template>
</odoo>