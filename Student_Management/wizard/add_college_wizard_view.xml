<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_college_wizard_view_form" model="ir.ui.view">
        <field name="name">student_college_wizard</field>
        <field name="model">add.college.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="college_ids"/>
                </group>
                <footer>
                    <button name="add_college" string="Add College" type="object" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="add_college_wizard_action" model="ir.actions.act_window">
        <field name="name">Add College</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">add.college.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="add_college_wizard_view_form"/>
        <field name="binding_model_id" ref="model_student"/>
        <field name="target">new</field>
    </record>
</odoo>