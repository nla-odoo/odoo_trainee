<?xml version="1.0" encoding="utf-8"?>
<odoo>


  <record model="ir.actions.act_window" id="hospital_management_doctor_action">
	<field name="name">Doctor</field>
	<field name="res_model">hospital_management.doctor</field>
	<field name="view_mode">tree,form,kanban</field>
  </record>

   <!-- Doctor Tree view -->
  <record model="ir.ui.view" id="hospital_management_doctor_list">
	<field name="name">Doctor.tree</field>
	<field name="model">hospital_management.doctor</field>
	<field name="arch" type="xml">
	  <tree>
		<field name="name"/>
		<field name="email"/>
		<field name="phone"/>
		<field name="gender"/>
	  </tree>
	</field>
  </record>


   <!-- Doctor form view -->
  <record model="ir.ui.view" id="hospital_management_doctor_form">
	  <field name="name">Doctor.form</field>
	  <field name="model">hospital_management.doctor</field>
	  <field name="arch" type="xml">
		<form string="Doctor Form">
		  <sheet>
			<div class="oe_title">
			  <label for="name" class="oe_edit_only"/>
				<h1><field name="name" /></h1>
			</div>

			<group>
			  <group>
				<field name="specilization"/>
				<field name="gender"/>
				<field name="date_of_birth"/>
			  </group>

			  <group>
				<field name="email"/>
				<field name="phone"/>
				<field name="name_of_clinic"/>
				<field name="clinic_address"/>
			  </group>
			</group>

			  <notebook>
				<page string="Patient">
				   <field name="patient_id">
					 <tree editable="bottom">
					  <field name="name"/>
					  <field name="email"/>
					  <field name="age"/>
					  <field name="phone"/>
					  <field name="gender"/>
					 </tree>
				   </field>
				</page>
			  </notebook>

		  </sheet>
		</form>
	  </field>
  </record>


	<!-- Doctor kanban view -->
  <record model="ir.ui.view" id="hospital_management_doctor_kanban">
	<field name="name">Doctor.kanban</field>
	<field name="model">hospital_management.doctor</field>
	<field name="arch" type="xml">
	  <kanban>
		<field name="name"/>
		<field name="email"/>
		<field name="phone"/>

		  <templates>
			  <t t-name="kanban-box">
				<div t-attf-class="oe_kanban_global_click">   
					<div class="oe_kanban_details">
					  <strong class="o_kanban_record_title"><field name="name"/></strong>

					  <ul>
						<li><field name="email"/></li>
						<li><field name="phone"/></li>
						<li><field name="gender"/></li>
					  </ul>

					</div>
				</div>
			  </t>
		  </templates>
	  </kanban>
	</field>
  </record>

	<!-- Doctor menu -->
	<menuitem name="Doctor" id="hospital_management_doctor_menu" parent="hospital_management_menu_root"
		action="hospital_management_doctor_action"/>

</odoo>