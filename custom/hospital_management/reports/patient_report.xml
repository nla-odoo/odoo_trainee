<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<report
		id="patient_details_report"
		model="hospital_management.patient"
		string="Print Details"
		name="hospital_management.patient_card"
		file="hospital_management.patient_card"
		report_type="qweb-pdf"
		attachment_use="True"
	/>

	<report
		id="patient_details_report_primary"
		model="hospital_management.patient"
		string="Print Details Primary"
		name="hospital_management.report_patient_primary"
		file="hospital_management.report_patient_primary"
		report_type="qweb-pdf"
		attachment_use="True"
	/>

	<template id="patient_card">
		<h2>Hi</h2>
		<t t-call="web.html_container">
			<!-- <t t-foreach="docs" t-as="doc"> -->
				<t t-call="web.external_layout">
					<div class="page">
						<center>
							<h1>Patient Details</h1>
						</center><br/>
							<table class="table">
							  <thead>
								<tr>
								  <th scope="col">Name</th>
								  <th scope="col">Email</th>
								  <th scope="col">Phone</th>
								  <th scope="col">Gender</th>
								  <th scope="col">Blood Group</th>
								  <th scope="col">Age</th>
								  <th scope="col">Date Of Birth</th>
								  <th scope="col">Address</th>
								</tr>
							  </thead>
							  <tbody>
								<tr t-foreach="docs" t-as="doc">
								  <td>
									<p t-field="doc.name"/>
								  </td>

								  <td>
									<p t-field="doc.email"/>
								  </td>

								  <td>
									<p t-field="doc.phone"/>
								  </td>

								  <td>
									<p t-field="doc.gender"/>
								  </td>

								  <td>
									<p t-field="doc.blood_group"/>
								  </td>

								  <td>
									<p t-field="doc.age"/>
								  </td>

								  <td>
									<p t-field="doc.date_of_birth"/>
								  </td>

								  <td>
									<p t-field="doc.address"/>
								  </td>
								</tr>
							  </tbody>
						</table>
					</div>
				</t>
			<!-- </t> -->
		</t>
	</template>


	<template id="report_patient_inherit" inherit_id="patient_card">
	   <xpath expr="(//th)[1]" position="after">
		  <th scope="col">Inherited</th>
	   </xpath>

	   <xpath expr="(//td)[1]" position="after">
		<td>
		   <p>inherited data..</p>
		</td>
	   </xpath>
	</template>

	<!-- <template id="report_patient_primary" inherit_id="patient_card" primary="True">
		<xpath expr="(//th)[1]" position="after">
			<th scope="col">Appointment</th>
		</xpath>

		<xpath expr="(//td)[1]" position="after">
			<td>
				<p t-field="doc.appointment_count"/>
			</td>
		</xpath>
	</template> -->

	<template id="report_patient_primary" inherit_id="patient_card" primary="True">
	   <xpath expr="//table/thead/tr/th" position="after">
		  <th scope="col">Appointment</th>
	   </xpath>

	   <xpath expr="//table/tbody/tr/td" position="after">
		  <td>
			<p t-field="doc.appointment_count"/>
		  </td>
	   </xpath>
	</template>
</odoo>