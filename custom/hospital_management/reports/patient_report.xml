<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<report
		id="patient_details_report"
		model="hospital_management.patient"
		string="Print Details"
		name="hospital_management.patient_card"
		file="hospital_management.patient_card"
		report_type="qweb-pdf"
		attachment_use="True"
	/>

	<template id="patient_card">
		<t t-call="web.html_container">
		<t t-call="web.external_layout">
		  <center>
				<h1>Patient Details</h1>
			</center><br/>

					<table class="table">
					  <thead>
						<tr>
						  <th scope="col">Name</th>
						  <th scope="col">Email</th>
						  <th scope="col">Phone</th>
						  <th scope="col">Gender</th>
						  <th scope="col">Blood Group</th>
						  <th scope="col">Age</th>
						  <th scope="col">Date Of Birth</th>
						  <th scope="col">Address</th>
						</tr>
					  </thead>
					  <tbody>
						<t>
							<tr t-foreach="docs" t-as="doc">
							  <td>
								<p><t t-esc="doc.name"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.email"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.phone"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.gender"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.blood_group"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.age"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.date_of_birth"/></p>
							  </td>

							  <td>
								<p><t t-esc="doc.address"/></p>
							  </td>

							</tr>
						</t>
					  </tbody>
				</table>
		</t>
		</t>
	</template>
</odoo>