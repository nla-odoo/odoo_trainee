<?xml version="1.0" encoding="utf-8"?>
<odoo>
	

	 <record model="ir.actions.act_window" id="doctor_inherit_action">
	      <field name="name">DoctorInherit</field>
	      <field name="res_model">doctor.inherit</field>
	      <field name="view_mode">tree,form</field>
     </record>
	
	 <!-- Doctor Inherit Tree view -->
     <record model="ir.ui.view" id="doctor_inherit_list">
	      <field name="name">DoctorInherit.tree</field>
	      <field name="model">doctor.inherit</field>
	      <field name="arch" type="xml">
	        <tree>
	          <field name="name"/>
	          <field name="email"/>
	          <field name="phone"/>
            <field name="gender"/>
            <field name="patient_id"/>
	        </tree>
	      </field>

    </record>


   <!-- Doctor Inherit form view -->
    <record model="ir.ui.view" id="doctor_inherit_form">
	      <field name="name">DoctorInherit.form</field>
	      <field name="model">doctor.inherit</field>
	      <field name="arch" type="xml">
	        <form string="DoctorInherit Form">
                    <sheet>

                    	<div class="oe_title">
				            <label for="name" class="oe_edit_only"  />
				            <h1><field name="name" /></h1>
        			    </div>
                       

                        <group>
                        	<group>
                        	   <field name="specilization"/>
                        	   <field name="gender"/>
                               <field name="date_of_birth"/>
                               <field name="patient_id"/>

                        	</group>

                            <group>
                            	<field name="email"/>
                                <field name="phone"/>
	                            <field name="name_of_clinic"/>
	                            <field name="clinic_address"/>
                              
                            </group>
                            

                        </group>
                    </sheet>
                </form>
	      </field>
    </record>
   


    


       
    <!-- Doctor Inherit menu -->
   
   <menuitem name="DoctorInherit" id="doctor_inherit_main_menu" />

    <menuitem name="DoctorInherit Menu" id="doctor_inherit_second_menu" parent="doctor_inherit_main_menu" action="doctor_inherit_action"/>

</odoo>