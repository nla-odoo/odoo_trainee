<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="student_tree_view">
            <field name="name">Student</field>
            <field name="model">student</field>
            <field name="arch" type="xml">
               <tree>
               	   <field name="name"/>
                   <field name="gender"/>
               	   <field name="enrollmentNo"/>
               	   <field name="contactNo"/>
               	   <field name="age"/>
               	   <field name="branch"/>	
                   <field name="fees"/>
                   <field name="date"/>
                   <field name="bdate"/>
                   
               </tree>
            </field>
  </record>

  <record model="ir.ui.view" id="student_form_view">
      <field name="name">Student</field>
      <field name="model">student</field>
      <field name="arch" type="xml">
       <form>
         <sheet>
          <field name="image" widget="image" class="oe_avatar"/>
           <div class="oe_title">
             <h1>
               <field name="name"/>
             </h1>
           </div>

           <group>
             <field name="gender"/>
           </group>
           <group>
             <field name="date"/>
           </group>
           <group>
             <field name="enrollmentNo"/>
             <field name="contactNo"/>
             <field name="age"/>
             <field name="branch"/>
             <field name="fees"/>
           </group>   
         </sheet>
       </form>      
      </field>
  </record>

  <record model="ir.ui.view" id="student_calendar_view">
     <field name="name">Student</field>
     <field name="model">student</field>
     <field name="arch" type="xml">
      <calendar color="name" date_start="date">
        <field name="name"/>
      </calendar>
     </field>
  </record>

  <record model="ir.ui.view" id="student_graph_view">
    <field name="name">Student</field>
     <field name="model">student</field>
     <field name="arch" type="xml">
       <graph>
         <field name="age"/>
         <field name="fees" type="mesaure"/>
       </graph>

     </field>
  </record>

  <record model="ir.ui.view" id="student_kanban_view">
    <field name="name">Student</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
      <kanban>
        <field name="id"/>
        <field name="image"/>
        <field name="name"/>
        <field name="gender"/>
        <field name="branch"/>
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_global_click">
            
              <div class="oe_kanban_image">
                 <img t-att-src="kanban_image('student', 'image', record.id.raw_value)"  alt="Avatar"/>
              </div>
             <div class="row">
              <div class="col-6">
               <div class="oe_kanban_details">
                 <steong class="o_kanban_record_title">
                   <li>NAME: <field name="name"/></li>
                 </steong>
                </div>
               <div class="oe_kanban_details">
                 <steong class="o_kanban_record_title">
                    <li>GENDER: <field name="gender"/></li>
                 </steong>
               </div>
               <div>
                 <steong class="o_kanban_record_title">
                    <li>BRANCH: <field name="branch"/></li>
                 </steong>
               </div> 
              </div>
             </div>
            
           </div>
          </t> 
        </templates>
      </kanban>
    </field>
  </record>

  <record model="ir.ui.view" id="student_gantt_view">
    <field name="name">Student</field>
    <field name="model">student</field>
    <field name="arch" type="xml">
        <gantt string="Join_date" date_start="date" date_stop="bdate" default_group_by="gender">
              <field name="name"/>
              <field name="enrollmentNo"/>
        </gantt>
    </field>
  
  </record>

  <record id="student_pivot_view" model="ir.ui.view">
        <field name="name">Student</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <pivot string="students">
                <field name="name" type="row"/>
                <field name="enrollmentNo" type="measure"/>
            </pivot>
        </field>
  </record>

  <record model="ir.ui.view" id="student_search_view">
     <field name="name">Student</field>
     <field name="model">student</field>
     <field name="arch" type="xml">
      <search>
        <field name="branch"/>
        <field name="name"/>
        <filter string="Male" name="male" domain="[('gender','=','male')]" />
        <separator/>
        <filter string="Female" name="female" domain="[('gender','=','female')]" />
        <group>
          <filter string="branch" name="branch" context="{'group_by':'branch'}"/>
        </group>
      </search>
     </field>
  </record>       

    <record id="student_action" model="ir.actions.act_window" >
        <field name="name">student</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form,search,calendar,graph,kanban,gantt,pivot</field>
    </record>

    
    
    <menuitem id="student_menu" name="Student Data" web_icon="student_demo,static/description/icon.png"/>

    <menuitem id="student" name="Details" sequence="1" action="student_action" parent="student_menu"/>

    
</odoo>
