<?xml version="1.0" encoding="utf-8"?>
<odoo>
  
    
	<record id="sales_tree_view" model="ir.ui.view">
		<field name="name">Sales</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
        	<tree>
        		<field name="name"/>
        		<field name="order_date"/>
        		<field name="partner_id" /> 
               	<field name="sales_person"/>
    		 	<field name="next_activity"/>
            	<field name="total"/>
            	<field name="review"/>
        	</tree>
        </field>
    </record>
    
    <record id="sales_form_view" model="ir.ui.view">
    	<field name="name">Sales</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
        	<form>
        		<header>
        			<button name="invoice" string="CREATE INVOICE" />
        			<button name="email" string="SEND BY MAIL" />
        			<button name="cancel" string="CANCEL"  />
        		</header>
        		<sheet>
        			
        			<div class="oe_title">
	                 <h1>
	                   <field name="name" readonly="1"/>
	                 </h1>
                    </div>                    

                    <group>
                    	<field name="partner_id" /> 	
                    </group>

                    <group>

                    <field name="review"/>
                   	<field name="sales_person"/>
        		 	<field name="next_activity"/>
                	<field name="total"/> 
                    </group>
                    
                    <group>
                    	<field name="order_date"/>
                    </group>

        			<notebook>
        				<page string="Ordder_Lines">
        					
        				</page>
        				<page string="Other info">
        				  	
        				</page>
        				<page string="Customer Signature">
        					
        				</page>
        			</notebook>
        		</sheet>
        	</form>
        </field>
    </record>

    <record model="ir.ui.view" id="sales_search_view">
     <field name="name">Sales</field>
     <field name="model">sales</field>
     <field name="arch" type="xml">
      <search>
        <field name="name"/>
      </search>
     </field>
  </record>

    <record id="sales_kanban_view" model="ir.ui.view">
    	<field name="name">Sales</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
        	<kanban>
        		<field name="name"/>
        		<field name="order_date"/>
                <field name="next_activity"/>
            	<!-- <field name="total"/>  -->
                <templates>
                	<t t-name="kanban-box">
                		<div t-attf-class="oe_kanban_global_click">
            			 <div class="row">
            			    <div class="col-6">
            			    	<div class="oe_kanban_details">
				                   <strong class="o_kanban_record_title">
				                     <field name="name"/>
				                   </strong>
					            </div>
					            
					            <div class="oe_kanban_details">
				                   <strong class="o_kanban_record_title">
				                     <field name="order_date"/>
				                   </strong>
					            </div>					            
                                
                                <div class="oe_kanban_details">
				                   <strong class="o_kanban_record_title">
				                     <field name="next_activity"/>
				                   </strong>
					            </div>
                                
            			    </div>	
            			 </div>
            			
                		</div>
                	</t>
                	
                </templates>


        	</kanban>
        </field>
    </record>

    <record id="sales_caledar_view" model="ir.ui.view">
    	<field name="name">Sales</field>
    	<field name="model">sales</field>
    	<field name="arch" type ="xml">
    		<calendar color="name" date_start="order_date">
                <field name="name"/>
    		</calendar>
    	</field>
    </record>

    <record id="sales_graph_view" model="ir.ui.view">
    	<field name="name">Sales</field>
    	<field name="model">sales</field>
    	<field name="arch" type ="xml">
    		<graph>
                <!-- <field name="name"/> -->
    		</graph>
    	</field>
    </record>

    <record id="sales_pivot_view" model="ir.ui.view">
        <field name="name">Sales</field>
        <field name="model">sales</field>
        <field name="arch" type="xml">
            <pivot string="Sales">
                <field name="name" type="row"/>
            </pivot>
        </field>
  </record>



