<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_tree_view" model="ir.ui.view">
        <field name="name">Student Tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
            <field name="student_id"/>
            <field name="name" />
            <field name="gender" />
            <field name="birthDate" />
            <field name="mobile_number"/>
            <field name="email" />
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">Student Form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <separator string="Personal Details"/>
                    </group>
                    <group>    
                        <field name="image" widget="image" class="oe_avatar" style="float:left;padding-bottom:10px;"/>
                        <field name="student_id" style="width:25%;"/>
                        <field name="name" style="width:25%;"/>
                        <field name="gender" widget="radio" />
                        <field name="birthDate" style="width:25%;" />
                        <field name="age" style="width:25%;"/>                      
                    </group>           
                </sheet>
                <sheet>
                    <group>
                        <separator string="Contact Details"/>
                    </group>
                    <group>    
                        <field name="mobile_number" style="width:25%;"/>
                        <field name="email" style="width:25%;"/>
                        <field name="address" style="width:25%;"/>                
                    </group>       
                </sheet>
                <sheet>
                    <group>
                        <separator string="Other Details"/>
                    </group>
                    <group>
                        <field name="bloodGroup" style="width:25%;"/>
                        <field name="height" style="width:25%;"/>
                        <field name="weight" style="width:25%"/> 
                        <field name="disabled"/> 
                    </group>
                </sheet>
                <sheet>
                    <group>
                        <separator string="Write Your Brief Introduction"/>
                    </group>
                    <group>
                        <field name="intro" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_menu_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create Student Record
            </p>
        </field>
    </record>
    
    <menuitem
        id="student_menu"
        name="Students"
        sequence="1"/>

    <menuitem
        id="school_student_menu"
        name="Student Main"
        parent="student_menu"
        action = "student_menu_action"
        sequence="1"/>

</odoo>
