<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_tree_view" model="ir.ui.view">
        <field name="name">Student Tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
            <field name="student_id" />
            <field name="name" />
            <field name="gender" />
            <field name="birthDate" />
            <field name="age" />
            <field name="mobile_number"/>
            <field name="email" />
            <field name="city" />
            <field name="bloodGroup"/>
            <field name="height" />
            <field name="weight" />
            <field name="disabled" />
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">Student Form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <notebook>
                <page string="Personal Details">
                    <group>    
                        <field name="image" widget="image" class="oe_avatar" style="float:left;padding-bottom:10px;"/>
                        <field name="student_id" style="width:25%;"/>
                        <field name="name" style="width:25%;"/>                     
                    </group>      
                    <group>
                        <field name="gender" widget="radio" />
                        <field name="birthDate" style="width:25%;" />
                        <field name="age" style="width:25%;"/> 
                    </group>     
                </page>
                <page string="Contact Details">           
                    <group>    
                        <field name="mobile_number" style="width:25%;"/>
                        <field name="email" style="width:25%;"/>
                        <field name="address" style="width:25%;"/>
                        <field name="city" style="width:25%;"/>                   
                    </group>       
                </page>
                <page string="Other Details">
                    <group>
                        <field name="bloodGroup" style="width:25%;"/>
                        <field name="height" style="width:25%;"/>
                        <field name="weight" style="width:25%"/> 
                        <field name="disabled"/> 
                    </group>
                </page>
                <page string="Write Your Brief Introduction">
                    <group>
                        <field name="intro" />
                    </group>
                </page>
            </notebook>
            </form>
        </field>
    </record>
    <record id="student_view_graph" model="ir.ui.view">
        <field name="name">Student Graph</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <graph string="Student Graph" type="bar">
                <field name="name" />
                <field name="age" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="student_view_gantt" model="ir.ui.view">
        <field name="name">Student Gantt</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <gantt string="" date_start="birthDate" date_stop="date_today">
                <field name="name" />
                <field name="age"/>
            </gantt>
        </field>
    </record>
   <record id="student_view_calendar" model="ir.ui.view">
       <field name="name">Student Calendar</field>
       <field name="model">school.student</field>
       <field name="arch" type="xml">
           <calendar string="Student_Calendar" date_start="birthDate" color="name">
               <field name="student_id" />
               <field name="name"/>
               <field name="birthDate" />
           </calendar>
       </field>
   </record>

   <record id="search_view_search" model="ir.ui.view">
       <field name="name">Student Search</field>
       <field name="model">school.student</field>
       <field name="arch" type="xml">
           <search string="Student Search">
               <field name="name" />
               <field name="email" />
               <filter string="Male" name="male" domain="[('gender','=','male')]"/>
               <separator/>
               <filter string="Female" name="female" domain="[('gender','=','female')]"/>
               <group>
                   <filter string="By City" name="city" context="{'group_by':'city'}"/>
                   <separator/>
                   <filter string="By Blood Group" name="bloodGroup" context="{'group_by':'bloodGroup'}"/>
               </group>
               <searchpanel class="">
                    <field name="gender" icon="fa-users"/>
            </searchpanel>
           </search>
       </field>
   </record>

   <record id="student_view_pivot" model="ir.ui.view">
       <field name="name">Student Pivot</field>
       <field name="model">school.student</field>
       <field name="arch" type="xml">
           <pivot string="Students">
               
           </pivot>
       </field>
   </record>

    <record id="student_menu_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form,calendar,graph,gantt,search,pivot</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create Student Record
            </p>
        </field>
    </record>
    
    <menuitem
        id="student_menu"
        name="Students"
        sequence="1"/>

    <menuitem
        id="school_student_menu"
        name="Student Main"
        parent="student_menu"
        action = "student_menu_action"
        sequence="1"/>

</odoo>
