<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_wizard_form" model="ir.ui.view">
        <field name="name">school_form.wizard</field>
        <field name="model">school.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="school_id"/>
                </group>
                <footer>
                    <button name="add_school" string="Add School" type="object" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="school_wizard_action" model="ir.actions.act_window">
        <field name="name">Add School</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="school_wizard_form"/>
        <field name="binding_model_id" ref="model_school_student"/>
        <field name="target">new</field>
    </record>

</odoo>