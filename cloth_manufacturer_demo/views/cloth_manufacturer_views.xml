<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record model="ir.ui.view" id="manufac_tree_view">
        <field name="name">Manufacturer.tree</field>
        <field name="model">manufacturer</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="labourers_id"/> -->
                <field name="manufacturer_name"/>
                <field name="city"/>
                <field name="company_address"/>
                <field name="contact"/>
                <field name="production"/>
                <field name="labourers_record"/>
                <field name="machines"/>
                <field name="turnover"/>
            </tree>
        </field>
    </record>

     <record model="ir.ui.view" id="form_view">
        <field name="name">Manufacturer.Form</field>
        <field name="model">manufacturer</field>
        <field name="arch" type="xml">
            <form string="Employee form">
                <notebook>
                    <page string="Personal Details">
                        <group>
                            <field name="manufacturer_name"/>
                            <field name="city"/>
                            <field name="company_address"/>
                            <field name="contact"/>
                            <field name="production"/>
                            <field name="machines"/>
                            <field name="turnover"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>
    

    <record model="ir.ui.view" id="calendar_view">
        <field name="name">Manufacturer.calendar</field>
        <field name="model">manufacturer.labourers</field>
        <field name="arch" type="xml">
            <calendar string="Calendar" date_start="join_date" date_stop="join_date">
                <field name="labourer_name"/>
                <field name="role"/>
                <field name="labourer_address"/>
                <field name="join_date"/>
            </calendar>
        </field>
    </record>

    <record model="ir.ui.view" id="graph_view">
        <field name="name">Manufacturer.graph</field>
        <field name="model">manufacturer</field>
        <field name="arch" type="xml">
            <graph string="Graph" type="pie">
                <field name="manufacturer_name"/>
                <field name="city"/>
                <field name="company_address"/>
                <field name="contact"/>
                <field name="production"/>
                <field name="labourers_record"/>
                <field name="machines"/>
                <field name="turnover"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="pivot_view">
        <field name="name">Manufacturer.pivot</field>
        <field name="model">manufacturer</field>
        <field name="arch" type="xml">
            <pivot string="Pivot">
                <field name="manufacturer_name"/>
                <field name="city"/>
                <field name="company_address"/>
                <field name="contact"/>
                <field name="production"/>
                <field name="labourers_record"/>
                <field name="machines"/>
                <field name="turnover"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="labourers_tree_view">
        <field name="name">Labourers.tree</field>
        <field name="model">manufacturer.labourers</field>
        <field name="arch" type="xml">
            <tree>
                <field name="manufacturer_id"/>
                <field name="labourer_name"/>
                <field name="role"/>
                <field name="join_date"/>
                <field name="labourer_address"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="labourers_form_view">
        <field name="name">Labourers.form</field>
        <field name="model">manufacturer.labourers</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="manufacturer_id"/>
                        <field name="labourer_name"/>
                        <field name="role"/>
                        <field name="salary"/>
                        <field name="salary"/>
                        <field name="join_date"/>
                        <field name="labourer_address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="consumption_tree_view">
        <field name="name">Consumption.tree</field>
        <field name="model">manufacturer.consumption</field>
        <field name="arch" type="xml">
            <tree>
                <field name="consumption_id"/>
                <field name="clothtype_id"/>
                <field name="cloth"/>
                <field name="color"/>
                <field name="electricity"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="consumption_form_view">
        <field name="name">Consumption.form</field>
        <field name="model">manufacturer.consumption</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="consumption_id"/>
                        <field name="clothtype_id"/>
                        <!-- <field name="manufacturer_name"/> -->
                        <field name="cloth"/>
                        <field name="color"/>
                        <field name="electricity"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="clothtype_tree_view">
        <field name="name">Clothtype.Tree</field>
        <field name="model">manufacturer.clothtype</field>
        <field name="arch" type="xml">
            <tree>
                <field name="clothtype_quality"/>
                <field name="type_of_wear"/>
                <field name="colors" widget='many2many_tags'/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="clothtype_form">
        <field name="name">ClothType.Form</field>
        <field name="model">manufacturer.clothtype</field>
        <field name="arch" type="xml">
            <form string="Cloth Type">
                <sheet>
                    <group>
                        <field name="clothtype_quality"/>
                        <field name="type_of_wear"/>
                        <field name="colors" widget='many2many_tags'/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="main_view">
        <field name="name">Manufacturer Details</field>
        <field name="res_model">manufacturer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="labourers_view">
        <field name="name">Labourers Details</field>
        <field name="res_model">manufacturer.labourers</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="consumption_view">
        <field name="name">Consumption Details</field>
        <field name="res_model">manufacturer.consumption</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="clothtype_view">
        <field name="name">Cloth Details</field>
        <field name="res_model">manufacturer.clothtype</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="colors_view">
        <field name="name">Colors</field>
        <field name="res_model">manufacturer.colors</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Manufacturer Details" id="manufacturer_main"/>

    <menuitem name="Manufacturer Details" id="manufacturer_details" parent="manufacturer_main" action="main_view"/>

    <menuitem name="Labourers Details" parent="manufacturer_main" id="manufacturer_labourers" action="labourers_view"/>

    <menuitem name="Consumption Details" parent="manufacturer_main" id="manufacturer_consumption" action="consumption_view"/>

    <menuitem name="Cloth Type Details" parent="manufacturer_main" id="manufacturer_clothtype" action="clothtype_view"/>

    <menuitem name="Color List" parent="manufacturer_main" id="colors" action="colors_view"/>

</odoo>