<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record model="ir.ui.view" id="manufac_tree_view">
        <field name="name">Manufacturer.tree</field>
        <field name="model">manufacturer</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="labourers_id"/> -->
                <field name="manufacturer_name"/>
                <field name="city"/>
                <field name="company_address"/>
                <field name="contact"/>
                <field name="production"/>
                <field name="labour"/>
                <field name="machines"/>
                <field name="turnover"/>
                <field name="clothtype_id"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

     <record model="ir.ui.view" id="form_view">
