<?xml version="1.0" encoding="UTF-8"?>

<odoo>

	<report
		id="manufacturer_report"
		model="manufacturer"
		string="Manufacturer Report"
		report_type="qweb-pdf"
		name="cloth_manufacturer_demo.manufacturer_report_view"
		file="cloth_manufacturer_demo.manufacturer_report"
		attachment_use="True"/>

	<template id="manufacturer_report_view">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<centre>
					<div class="page">
						<h1 style="font-size: 21pt;">Manufacturer Details</h1>
						<t t-foreach="docs" t-as="manufacturer">
							<div class="col-md-6">
								<table style="height:auto; border: 1pt solid black; border-collapse:separate; border-radius:8pt; margin:10pt;width:600pt; margin-bottom:10pt;margin-top:10pt;">
									<td valign="center">
										<table style="height:auto;width:200pt;">
											<tr style="margin:10pt">
												<!-- <td align="center" valign="center"> -->
												<strong style="font-size: 14pt; margin:15pt">Manufacturer Name: </strong><span style="font-size: 14pt;" t-field="manufacturer.manufacturer_name"/><br/>
											</tr>
											<tr>
												<strong style="font-size: 14pt; margin:15pt">Manufacturer Name: </strong><span style="font-size: 14pt;" t-field="manufacturer.city"/><br/>
											</tr>
											<tr>
												<strong style="font-size: 14pt; margin:15pt">Address: </strong><span style="font-size: 14pt;" t-field="manufacturer.company_address"/><br/>
											</tr>
											<tr>
												<strong style="font-size: 14pt; margin:15pt">Contact Number: </strong><span style="font-size: 14pt;" t-field="manufacturer.contact"/><br/>
											</tr>
											<tr>
												<strong style="font-size: 14pt; margin:15pt">Number of machines: </strong><span style="font-size: 14pt;" t-field="manufacturer.machines"/><br/>
											</tr>
											<tr>	
												<strong style="font-size: 14pt; margin:15pt">Turnover(Rs.): </strong><span style="font-size: 14pt;" t-field="manufacturer.turnover"/><br/>
											</tr>	
												<!-- </td> -->
										</table>
									</td>
								</table>
							</div>
						</t>
					</div>
				</centre>
			</t>
		</t>
	</template>

</odoo>

