<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	
	<record model="ir.ui.view" id="add_manufac_to_labourer_view">
		<field name="name">Add Manufacturer</field>
		<field name="model">manufacturer.labourers.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="manufacturer_id"/>
				</group>
				<footer>
					<button name="add_manufacturer" type="object" string="Add Manufacturer" class="btn btn-primary"/>
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_add_manufac">
		<field name="name">Add Manufacturer</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">manufacturer.labourers.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="add_manufac_to_labourer_view"/>
		<field name="binding_model_id" ref="model_manufacturer_labourers"/>
		<field name="target">new</field>
	</record>
</odoo>